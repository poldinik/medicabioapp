<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Medicabio.Views.ItemDetailPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        
        <Label Text="{Binding Item.Text}" FontSize="Large" FontAttributes="Bold"/>
        <Label Text="{Binding Item.Description}" FontSize="Small" />
        <Button Margin="0,10,0,0" Text="Voglio iscrivermi" BackgroundColor="{StaticResource NavigationPrimary}" TextColor="White" FontAttributes="Bold" />
    </StackLayout>
</ContentPage>